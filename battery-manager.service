[Unit]
Description=Battery Manager

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'cat /home/thiago/Coding/battery-manager/charging-threshold > /sys/class/power_supply/BAT?/charge_control_end_threshold'

[Install]
WantedBy=multi-user.target suspend.target hibernate.target hybrid-sleep.target suspend-then-hibernate.target
